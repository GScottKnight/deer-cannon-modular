# Azure Storage Configuration
# Copy this file to .env and fill in your Azure credentials

# Azure Storage Account Name
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name

# Azure Storage Account Key (primary or secondary)
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# Azure Storage Container Name for videos
AZURE_CONTAINER_NAME=deer-detections

# Optional: Azure Storage Connection String (alternative to account name/key)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Optional: SAS Token for more restricted access
# AZURE_SAS_TOKEN=?sv=2022-11-02&ss=b&srt=sco&sp=rwlac...

# Upload Configuration
UPLOAD_BATCH_SIZE=5
UPLOAD_RETRY_COUNT=3
UPLOAD_RETRY_DELAY=60

# Optional: Delete local files after successful upload (true/false)
DELETE_AFTER_UPLOAD=false

# Optional: Web Interface URL (for reference)
WEB_INTERFACE_URL=https://your-deer-detections.azurewebsites.net